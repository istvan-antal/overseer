<div class="ui card">
    <div class="content">
        <div class="header">{{ title }}</div>
        <div class="ui divided list">
            {% for item in issues %}
                {% include 'issue.twig' %}
            {% endfor %}
        </div>
    </div>
    <div class="extra content">
        {{ issues | length }} items
        {% if options.showProgressBar is defined and options.showProgressBar %}
            <div data-value="{{ 0 }}" data-total="issues | length" class="ui indicating progress">
                <div class="bar">
                    <div class="progress"></div>
                </div>
            </div>
        {% endif  %}
    </div>
</div>