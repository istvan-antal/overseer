{% extends 'base.twig' %}

{% block body -%}
    <h2 class="ui dividing header">
        {{ version.name }}
    </h2>
    <label>
        <input type="checkbox" class="ux-issue-resolved-toggle"> hide resolved
    </label>
    <table class="ui striped selectable table">
        <thead>
            <tr>
                <th class="twelve wide">Summary</th>
                <th class="two wide">Estimate</th>
                <th class="two wide">Assignee</th>
            </tr>
        </thead>
        <tbody>
            {% for item in issues %}
                {% include 'issueRow.twig' %}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3">
                    {{ issues | length }} items
                    {% if options.showProgressBar is defined and options.showProgressBar %}
                        <div data-value="{{ resolvedIssueCount }}" data-total="{{ issues | length }}" class="ui indicating progress">
                            <div class="bar">
                                <div class="progress"></div>
                            </div>
                        </div>
                    {% endif  %}
                    
                </th>
            </tr>
        </tfoot>
    </table>
{% endblock %}